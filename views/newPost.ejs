<%- include("partials/header") %>


<div class="container" style="margin-top: 50px;">

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="noticeTitle">Title</label>
            <input type="text" name="title" class="form-control" id="noticeTitle" placeholder="Enter title" required="">
        </div>
        <label for="noticeDescription">Description</label>
        <div class="form-group">
            <textarea name="description" id="noticeDescription" rows="10" style="width: 100%;"></textarea>
        </div>
        <div class="form-group">
            <label for="exampledepartment1">Department</label>
            <select class="form-control" name="type" id="type">
                <option value="POST">POST</option>
                <option value="NOTICE">NOTIC</option>
                <option value="ASSIGNMENT">Assignment</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampledepartment1">Year</label>
            <select class="form-control" name="year" id="year">
                <option value="FE">First year</option>
                <option value="SE">Second year</option>
                <option value="TE">Third year</option>
                <option value="BE">Fourth year</option>
                <option value="ALL">All year</option>
            </select>
        </div>
        <div class="form-group">
            <label for="post">Attach image</label>
            <input type="file" multiple="" accept="image/*" name="post" id="post">
        </div>
        <div class="form-group">
            <label for="attachment">Attach file</label>
            <input type="file" name="attachment" id="attachment">
        </div>
        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </form>
</div>
<%- include("partials/footer") %>
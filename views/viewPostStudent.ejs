<%- include("partials/header") %>
<div class="container">
    <div class="lead">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="card-body" id="showpage">

                        <% for(let i = 0; i < post.image.length; i++) { %>
                        <div class="full-width-image">
                            <img class="img-responsive"
                                src="https://tkietbackend.herokuapp.com/<%= post.image[i].replace(/\\/, '/')  %>" alt=""
                                width="100%" />
                        </div>
                        <% } %>

                        <div class="caption-full">
                            <h4 class="float-right"><%= post.createdAt.toDateString() %></h4>
                            <h4 class="card-title"><a href=""><%= post.title %></a></h4>
                            <hr>
                            <p class="card-text"><%= post.description %></p>
                            <h4 class="float-right">Posted by : <%= post.postedBy.fullName %> </h4>
                        </div>
                        
                    <a class="btn btn-light" href="/student/feed"><button class="btn">Go back to feed</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>